@model List<object>

@{
    ViewBag.Title = "Demo1";
}

<h2>Demo1</h2>

<p>
    @Html.ActionLink("Create Index", "CreateIndex")
</p>

<form action="/LuceneNet/Demo1" method="get">
    <div>
        请输入搜索关键字: <input type="text" name="SearchKey" value="@ViewBag.SearchKey" />
        <input type="submit" name="btnSearch" value="search" />
    </div>
</form>

@foreach (var item in Model)
{
    if (item is News)
    {
        var news = item as News;
        <h3>新闻</h3>
        <p>@news.Id</p>
        <p>@Html.Raw(news.Title)</p>
        <p>@Html.Raw(news.Content)</p>
        <hr/>
    }
    else if (item is Video)
    {
        <h3>视频</h3>
        var video = item as Video;
        <p>@Html.Raw(video.Title)</p>
        <hr />
    }
}
